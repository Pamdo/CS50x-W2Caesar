#include <cs50.h>
#include <stdio.h>

int ladder_creator(int x);

int main(void)
{   
    while (true)
{
    int x = get_int("SayÄ± gir.\n");
    if (x<9&&0<x)
    {
        ladder_creator(x);
        break;
    }
} 
}
int ladder_creator(int x)
{
    for (int y=0 ; y<x ; y++)
    {
        for(int z=x-y-1 ; 1<=z ; z--)
        {
            printf(" ");
        }
        for(int z=0 ; z<=y ; z++)
        {
            printf("#");
        }

        printf("\n");
    }
         return 0;
}

